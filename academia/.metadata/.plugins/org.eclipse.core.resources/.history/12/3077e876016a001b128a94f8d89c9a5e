	public String getImc() {
		double calculoImc = peso/Math.pow(this.altura, 2);
		if(calculoImc<=0) {
			System.out.println("Seu Imc é de "+calculoImc+"Você digitou algo invalido");
		}
		else if(calculoImc>0 && calculoImc<=18.5){
			System.out.println("Seu Imc é de "+calculoImc+" Você está abaixo do peso");
		}
		else if(calculoImc >= 18.5 && calculoImc <= 24.9){
			System.out.println("Seu Imc é de "+calculoImc+" Você está no peso ideal, PARABÉNS!");
		}
		else if(calculoImc >= 24.9 && calculoImc <= 29.9){
			System.out.println("Seu Imc é de "+calculoImc+" ");
		}
		else if(calculoImc >= 29.9&& calculoImc <=34.9 ){
			System.out.println("Seu Imc é de "+calculoImc+" ");
		}
		else if(calculoImc >= 34.9&& calculoImc <= 39.9){
			System.out.println("Seu Imc é de "+calculoImc+" ");
		}
		else if(calculoImc > 39.9 ){
			System.out.println("Seu Imc é de "+calculoImc+" ");
		}
			
	}
}